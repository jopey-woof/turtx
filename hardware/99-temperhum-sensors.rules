# TemperhUM USB Sensor udev Rules
# Provides access to TemperhUM sensors for non-root users

# PCsensor TEMPerHUM devices
SUBSYSTEM=="usb", ATTRS{idVendor}=="3553", ATTRS{idProduct}=="a001", MODE="0666", GROUP="input"

# Input device access for TemperhUM sensors
SUBSYSTEM=="input", KERNEL=="event*", ATTRS{idVendor}=="3553", ATTRS{idProduct}=="a001", MODE="0666", GROUP="input"

# HID device access
SUBSYSTEM=="hidraw", ATTRS{idVendor}=="3553", ATTRS{idProduct}=="a001", MODE="0666", GROUP="input"

# Alternative detection by device name
SUBSYSTEM=="input", KERNEL=="event*", ATTRS{name}=="*TEMPerHUM*", MODE="0666", GROUP="input"
SUBSYSTEM=="input", KERNEL=="event*", ATTRS{name}=="*pcsensor*", MODE="0666", GROUP="input" 