[Unit]
Description=Turtle Kiosk Browser (Firefox)
After=graphical-session.target turtle-dashboard.service
Wants=graphical-session.target

[Service]
Type=simple
User=shrimp
Group=shrimp
Environment=DISPLAY=:0
ExecStart=/usr/bin/firefox --kiosk --private-window http://localhost:8080
Restart=always
RestartSec=10

[Install]
WantedBy=graphical-session.target 